              <!-- form start -->
              <%if(vendor=="1"){%>
              <form method="POST" action="/vendor_editproduct" enctype="multipart/form-data" id="productform">
                <%}else{%>
              <form method="POST" action="/editproduct" enctype="multipart/form-data" id="productform">
                <%}%>
                <div class="card-body">
                  <h5><%=msg%></h5>
                  <div class="form-group">
                    <label for="empname">Product Name</label>
                    <input type="text" class="form-control" id="productname" placeholder="Enter name" name="name" value="<%=product.name%>">
                  </div>
                 
                  <div class="form-group">
                    <label for="empid">Product  ID</label>
                    <input type="text" class="form-control" id="productid" placeholder="Enter ID" name="id" value="<%=product.id%>">
                  </div>
                  
                 
                  <div class="form-group">
                    <label for="age">Description</label>
                    <input type="text" class="form-control" id="productdes" placeholder="Enter Description" name="desc" value="<%=product.des%>">
                  </div>
                  <div class="form-group">
                    <label for="points">Points</label>
                    <input type="number" class="form-control" id="pts" placeholder="Enter Points to redeemed" name="pts" value="<%=product.pts%>">
                  </div>
                  <div class="form-group">
                    <label for="category">Category</label>
                    <input type="text" class="form-control" id="category" placeholder="Enter Category" name="category" value="<%=product.category%>">
                  </div>
                  
                  <div class="form-group">

                    <label for="exampleInputFile">Product Image</label>
                    
                    <div class="input-group">
                    
                    <div class="custom-file">
                    
                    <input type="file" name="file" class="custom-file-input" id="file" value="<%=product.file[0].originalname%>" multiple>
                    
                    <label class="custom-file-label" for="exampleInputFile" ><%=product.file[0].originalname%></label>
                    
                    </div>
                    
                    <div class="input-group-append">
                    
                    <span class="input-group-text">Upload</span>
                    
                    </div>
                    
                    </div>
                    
                  </div<div class="form-group">
          
                  <input type="hidden" class="form-control" name="pid" value="<%=product._id%>">
                  </div>
                 
                <div class="card-footer">
                  <button onclick="form(event)" class="btn btn-primary">Add product</button>
                </div>
              </form>
              
            </div>
